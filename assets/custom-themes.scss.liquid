}

.contact-page-content {
  color: white;
}


// assets.theme.js.liquid

.mfp-chevron {
  color: $lightbox-button-color;
}

button.mfp-close {
  color: $lightbox-button-color;
}

// product.liquid
.product-single__hero {

  h1 {
    border-bottom: 3px solid;
    padding-bottom: 20px;
  }

  .product-single__price {
    color: inherit;
    font-size: 32px;
  }

  button {
    font-weight: bold;
    padding: 12px 10px;
    border: $product-add-cart-button-border-pixel solid;
    border-radius: 0;
    background-color: transparent;

    &:hover {
      border: $product-add-cart-button-border-pixel solid #CCC;
      background: #EEE;
      background: rgba(#EEE, 0.8);
    }

  }

}

.custom-divider-div {
  width: 70%;
  height: 10px;
  border-style: solid;
  border-width: 3px;
  margin-bottom: 20px;
}

.cart__row {
  a {
    color: #CC9C56;
    & h5 {
      color:white;
      font-size: 22px;
    }
  }
}

.social-icons li .icon {
  &.icon-twitter {
    color: #55ACEE;
    &:hover {
      opacity: 0.9;
    }
  }
  &.icon-facebook {
    color: #3b5998;
    &:hover {
      opacity: 0.9;
    }
  }
  &.icon-instagram {
    color: #9E6F4F;
    &:hover {
      opacity: 0.9;
    }
  }
}

#ProductThumbs .item{
  margin: 3px;
}
#ProductThumbs .item img{
  display: block;
  height: auto;
}

.header-bar a, .header-bar button {
    &:hover {
      color: #CC9C56;
    }
}

.shopping-cart-section {
  display: inline-block;
  .shopping-cart-icon {
    height: 34px;
    width: 40px;
    background: url("shopping-cart-sprite-final.png") 0 0 no-repeat;
  }
  &:hover {
    .shopping-cart-icon {
      background: url("shopping-cart-sprite-final.png") 0 -34 no-repeat;
    }
    .cart-page-link {
      color: #CC9C56;
    }
  }
}
