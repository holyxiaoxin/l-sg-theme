// custom-navigator-wrapper.liquid

.fixed-navigation-wrapper {

  position: fixed;
  width: 180px;
  top: 25vh;
  left: 40px;
  color: $nav-color;
  z-index: 1;

  a {

    &:visited, &:link {
      color: $nav-color;
    }

    &:hover {
      color: $nav-color-hover;
    }

    .nav-icons {
      width: 40px;
      height: 40px;
      line-height: 40px;
      margin-bottom: 10px;
      padding-left: 50px;
    }

    .nav-home-icon {
      background: url('new-icons.png') 0 0 no-repeat;
    }

    .nav-t-shirt-icon {
      background: url('new-icons.png') 0 -45px no-repeat;
    }

    .nav-longsleeves-icon {
      background: url('new-icons.png') 0 -90px no-repeat;
    }

    .nav-headgears-icon {
      background: url('new-icons.png') 0px -135px no-repeat;
    }

    .nav-about-icon {
      background: url('new-icons.png') 0px -180px no-repeat;
    }

    .nav-purchase-icon {
      background: url('new-icons.png') 0px -225px no-repeat;
    }

    .nav-faq-icon {
      background: url('new-icons.png') 0px -270px no-repeat;
    }

    .nav-contact-icon {
      background: url('new-icons.png') 0 -315px no-repeat;
    }

    .nav-bottoms-icon {
      background: url('new-icons.png') 0 -360px no-repeat;
    }

    .nav-footwear-icon {
      background: url('new-icons.png') 0 -405px no-repeat;
    }
  }

}

// collection.liquid

.section-header.section-header--breadcrumb {

  margin: 0;

  .breadcrumb {
